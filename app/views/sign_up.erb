<div class="container">
  <h1>Sign Up</h1>

  <div id="errors"><%= erb :_model_errors, :layout => false, :locals => { :model => @user } %></div>

  <form id="sign-up" method="post" action="/users">
    <label class="label" for="name">Name</label>
    <input type="text" name="user[name]" placeholder="e.g., joe" value="<%= @user.name %>">
    <span id="name-errors" class="errors"></span>
    <br>

    <label class="label" for="email">Email</label>
    <input type="email" name="user[email]" placeholder="e.g., me@example.com" value="<%= @user.email %>">
    <span id="email-errors" class="errors"></span>
    <br>

    <label class="label" for="skill">Skill</label>
    <input type="text" name="skill" placeholder="e.g., Photoshop">
    <br>

    <label class="label" for="context">Context</label>
    <input type="text" name="context" placeholder="e.g., Technical">
    <br>

    <label class="label" for="years">Years</label>
    <input type="text" name="years" placeholder="e.g., 2">
    <br>

    <label class="label" for="formal">Formal education</label>
    <input type="text" name="formal" placeholder="false or true">
    <br>

    <label class="label" for="password">Password</label>
    <input type="text" name="user[password]" placeholder="6 or more characters">
    <span id="entered_password-errors" class="errors"></span>    
    <br>

    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>

</div>
